<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="src_atop">
                    <solid android:color="@*android:color/system_neutral2_800" />
                    <corners android:radius="@dimen/qs_corner_radius" />
                </shape>
            </item>
            <item
                android:bottom="4.0dp"
                android:start="4.0dp"
                android:end="4.0dp"
                android:top="4.0dp">
                <shape android:tintMode="src_atop">
                    <gradient
                        android:angle="0.0"
                        android:centerColor="#00000000"
                        android:endColor="#00000000"
                        android:startColor="#1A000000" />
                    <corners android:radius="@dimen/qs_corner_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="multiply">
                    <gradient
                        android:angle="0.0"
                        android:endColor="?android:colorSecondary"
                        android:startColor="?android:colorPrimary" />
                    <corners android:radius="@dimen/qs_corner_radius" />
                </shape>
            </item>
            <item
                android:bottom="4.0dp"
                android:start="4.0dp"
                android:end="4.0dp"
                android:top="4.0dp">
                <shape android:tintMode="multiply">
                    <gradient
                        android:angle="270.0"
                        android:centerColor="#00000000"
                        android:endColor="#00000000"
                        android:startColor="#40000000" />
                    <corners android:radius="@dimen/qs_corner_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
