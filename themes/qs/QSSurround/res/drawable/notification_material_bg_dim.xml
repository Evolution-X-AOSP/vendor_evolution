<?xml version="1.0" encoding="utf-8" ?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">
    <item>
        <shape>
            <solid android:color="#00000000" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0.0"
                android:endColor="@*android:color/system_accent1_400"
                android:startColor="@*android:color/system_accent1_400" />
            <corners android:radius="@*android:dimen/autofill_dialog_corner_radius" />
        </shape>
    </item>
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/system_neutral2_50" />
            <corners
                android:bottomLeftRadius="@*android:dimen/autofill_dialog_corner_radius"
                android:bottomRightRadius="@*android:dimen/autofill_dialog_corner_radius"
                android:topLeftRadius="@*android:dimen/harmful_app_name_padding_right"
                android:topRightRadius="@*android:dimen/harmful_app_name_padding_right" />
        </shape>
    </item>
</ripple>

