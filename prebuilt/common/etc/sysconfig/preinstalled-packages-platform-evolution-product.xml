<!-- System packages to preinstall on all devices with aosp_product, per user type.
     Documentation at frameworks/base/data/etc/preinstalled-packages-platform.xml
-->
<config>
    <install-in-user-type package="com.android.wallpaperpicker">
        <install-in user-type="FULL" />
    </install-in-user-type>

    <!-- System packages that should not be pre-installed on the CLONE profile. -->
    <!-- Messages -->
    <install-in-user-type package="com.android.messaging">
        <install-in user-type="FULL" />
        <install-in user-type="PROFILE" />
        <do-not-install-in user-type="android.os.usertype.profile.CLONE" />
    </install-in-user-type>
    <!-- Etar (Calendar) -->
    <install-in-user-type package="org.lineageos.etar">
        <install-in user-type="FULL" />
        <install-in user-type="PROFILE" />
        <do-not-install-in user-type="android.os.usertype.profile.CLONE" />
    </install-in-user-type>
    <!-- ExactCalculator -->
    <install-in-user-type package="com.android.calculator2">
        <install-in user-type="FULL" />
        <install-in user-type="PROFILE" />
        <do-not-install-in user-type="android.os.usertype.profile.CLONE" />
    </install-in-user-type>
    <!-- Aperture (Camera) -->
    <install-in-user-type package="org.lineageos.aperture">
        <install-in user-type="FULL" />
        <install-in user-type="PROFILE" />
        <do-not-install-in user-type="android.os.usertype.profile.CLONE" />
    </install-in-user-type>
    <!-- Chromium -->
    <install-in-user-type package="org.chromium.chrome">
        <install-in user-type="FULL" />
        <install-in user-type="PROFILE" />
        <do-not-install-in user-type="android.os.usertype.profile.CLONE" />
    </install-in-user-type>
    <!-- Android Auto (due to shipping stub on vanilla) -->
    <install-in-user-type package="com.google.android.projection.gearhead">
        <install-in user-type="FULL" />
        <install-in user-type="PROFILE" />
        <do-not-install-in user-type="android.os.usertype.profile.CLONE" />
    </install-in-user-type>
</config>
